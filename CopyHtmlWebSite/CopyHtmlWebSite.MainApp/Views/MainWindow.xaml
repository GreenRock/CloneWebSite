<Window x:Class="CopyHtmlWebSite.MainApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:mainApp="clr-namespace:CopyHtmlWebSite.MainApp"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Width="550" MinHeight="350" SizeToContent="Height" MinWidth="700" MaxWidth="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" prism:RegionManager.RegionName="{ x:Static mainApp:Regions.RightRegion }" HorizontalAlignment="Stretch" Margin="0,0,0,10">

        </ContentControl>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{ x:Static mainApp:Regions.MainRegion }" HorizontalAlignment="Stretch">

        </ContentControl>
    </Grid>

</Window>
